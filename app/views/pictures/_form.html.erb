<%= form_for api_v1_pictures_path do |f| %>
  <%= f.hidden_field :image, value: @picture.cached_image_data %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.submit %>
<% end %>

<% if @picture.image_data? %>
  Remove attachment: <%= f.check_box :remove_image %>
<% end %>